# Stage 1: Build an application 
FROM maven:3.8.4-openjdk-11 AS builder 
WORKDIR /app
COPY pom.xml  .
COPY src  ./src
RUN mvn package 


# Stage 2: Create the final image 
From openjdk:11-jre-slim
WORKDIR /app
COPY --from=builder /app/target/*.jar ./app.jar
EXPOSE 8080
ENTRYPOINT ["java", "-jar", "app.jar"]

